<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/employee/list">Employees</a></li>
    <li class="breadcrumb-item active">Edit</li>
</ol>
<h1 class="display-4">Edit Employee</h1>
<form method="post" action="/employee/update/<%= employee.id %>">
    <div class="form-group">
        <label for="id">Employee Id</label>
        <input type="integer" id="employee.id" class="form-control">
    </div>
    <div class="form-group">
        <label for="roles">Role</label>
        <input type="integer" name="roles" class="form-control">
    </div>
    <input type="submit" value="Submit" class="btn btn-primary">
</form>